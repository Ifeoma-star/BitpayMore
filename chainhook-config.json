{
  "chainhooks": [
    {
      "uuid": "bitpay-core-print-events",
      "name": "BitPay Core Stream Events",
      "version": 1,
      "chain": "stacks",
      "networks": {
        "testnet": {
          "if_this": {
            "scope": "print_event",
            "contract_identifier": "ST2F3J1PK46D6XVRBB9SQ66PY89P8G0EBDW5E05M7.bitpay-core-v2",
            "contains": [
              "stream-created",
              "stream-withdrawal",
              "stream-cancelled",
              "stream-sender-updated"
            ]
          },
          "then_that": {
            "http_post": {
              "url": "http://localhost:3000/api/webhooks/chainhook/streams",
              "authorization_header": "Bearer ${CHAINHOOK_SECRET_TOKEN}"
            }
          },
          "start_block": 1,
          "decode_clarity_values": true
        },
        "mainnet": {
          "if_this": {
            "scope": "print_event",
            "contract_identifier": "REPLACE_WITH_MAINNET_DEPLOYER.bitpay-core-v2",
            "contains": [
              "stream-created",
              "stream-withdrawal",
              "stream-cancelled",
              "stream-sender-updated"
            ]
          },
          "then_that": {
            "http_post": {
              "url": "https://your-production-domain.com/api/webhooks/chainhook/streams",
              "authorization_header": "Bearer ${CHAINHOOK_SECRET_TOKEN}"
            }
          },
          "decode_clarity_values": true
        }
      }
    },
